{%  extends 'base.html.twig' %}

{% block body %}
    <h2>Liste de s√©ries</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Overview</th>
                <th>Genres</th>
                <th>Status</th>
                <th>Votes</th>
                <th>First air date</th>
                <th>Last air date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for serie in series %}
            <tr>
                <td>{{ serie.name }}</td>
                <td>{{ serie.overview }}</td>
                <td>{{ serie.genres }}</td>
                <td>{{ serie.status }}</td>
                <td>{{ serie.vote }}</td>
                <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
                <td>{{ serie.lastAirDate|date('d/m/Y') }}</td>
                <td><a href="{{ path('app_series_detail', {'id': serie.id}) }}">
                        <i class="bi bi-eye"></i>
                    </a>&nbsp;
                    <a href="{{ path('app_series_delete', {'id': serie.id}) }}">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}